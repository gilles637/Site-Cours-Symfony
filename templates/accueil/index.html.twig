{% extends 'base.html.twig' %}

{% block title %}Accueil Leçons{% endblock %}

{% block body %}

    <style>

        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    </style>

    <div class="example-wrapper">

        <br/>
        {% if app.user %}
            <h1>Bonjour {{ app.user.prenom }}, bienvenue sur Leçons !</h1>
        {% else %}
            <h1>Bonjour Invité, bienvenue sur Leçons !</h1>
        {% endif %}
        <br/>
        <p>Pour naviguer sur le site, utilisez la barre de navigation en haut de la page...</p>

    </div>

{% endblock %}