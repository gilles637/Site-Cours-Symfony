{% extends 'base.html.twig' %}

{% block title %}Gestion Utilisateurs{% endblock %}

{% block body %}
    <br/>
    <div style="text-align: center;"><h1>Gestion des Utilisateurs</h1></div>
    <br/>
    <div class="d-flex justify-content-center" id="wrapper">
        <div class="border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Rôles</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="{{ path('app_admin_role', {'role':  'ROLE_ADMIN'}) }}">
                    Admin
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="{{ path('app_admin_role', {'role':  'ROLE_PROFESSEUR'}) }}">
                    Professeur
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="{{ path('app_admin_role', {'role':  'ROLE_ELEVE'}) }}">
                    Élève
                </a>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Username</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.username }}</td>
                            <td>
                                <a href="{{ path('app_admin_show', {'id': user.id}) }}">show</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun utilisateur enregistré...</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br/>
    <div class="container">
        <div class="row">
            <div class="d-flex align-items-center justify-content-center">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>
    <br/>
    <div style="text-align: center;">
        <button onclick="location.href='{{ path('app_admin_new') }}'"
                title="NewProf" class="btn btn-primary">Créer Professeur</button>
    </div>
    <br/>
{% endblock %}
